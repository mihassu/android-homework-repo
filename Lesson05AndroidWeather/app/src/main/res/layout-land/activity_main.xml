<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tViewSelectedCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center" />

        <Button
            android:id="@+id/buttonSelectCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="@string/selectcity" />

        <CheckBox
            android:id="@+id/showWindChB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/windStr" />

        <CheckBox
            android:id="@+id/showPressureChB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pressureStr" />

        <Button
            android:id="@+id/buttonShowWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/showWeather" />


        <!--<fragment-->
            <!--android:id="@+id/cites"-->
            <!--android:name="com.android.lesson05androidweather.CitiesFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"></fragment>-->


    </LinearLayout>


    <FrameLayout
        android:id="@+id/weather_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/detailsElementBackground">

    </FrameLayout>
</LinearLayout>